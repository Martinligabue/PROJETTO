.data

testo: .asciiz "a-0-1-2 b-2-3"
testoerrore: .asciiz "è stato riscontarto un errore, inserire testo correttamente"
sbuffer: .space 256

.text

	li $v0,4
	la $a0, testo
	syscall
	
	la $s0, testo
	li $s1,-1			#facciamo in modo che non sia zero senno' il beqz risulta subito uguale a zero
	
lunghezzatesto:				#ciclo che...

	beqz $s1,uscitaseria
	lb $s1,($s0)			#salviamo in s1 la letteraaaaa
	addi $s0,$s0,1
	lb $t0,($s0)
	bne $t0,'-',errore
	addi $s0,$s0,1
	
	j leggesalvanumero
	
leggesalvanumero:

	lb $s2,($s0)			#salviamo in t2 il primo numero
	subi $s2,$s2,48
	
	j controllonumero
	
controllonumero:

	addi $s0,$s0,1
	lb $t0,($s0)
	beq $t0,'-',converteprim
	beq $t0,' ',convertesec
	subi $t0,$t0,48
	move $t2,$t0
	mul $s2,$s2,10
	add $s2,$s2,$t2
	
	j controllonumero
	
	
converteprim:

	la $t1, sbuffer 			#salviamo in t1 il buffer per poterci salvare la roba dentro
	add $t1,$t1,$s2
	sb $s1,($t1)
	li $v0, 4
	la $a0, sbuffer
	syscall

convertesec:














errore:

	li $v0, 4
	la $a0, testoerrore
	syscall

uscitaseria:
	li $v0,10
	syscall